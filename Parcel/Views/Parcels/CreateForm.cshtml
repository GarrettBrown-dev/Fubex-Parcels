@using (Html.BeginForm())
{@using FubexParcel.Models};
@model Parcel;

<form action="/parcels" method="post">
  <p>Reciepiant:</p>
  @Html.ValidationSummary(true)
  <p>@Html.ValidationMessageFor(x => x.Name)</p>
  <p>Name: @Html.EditorFor(m => m.Name)</p>
  <label for="name">Name:</label>
  <input id="name" name="name" type="text">
  <label for="street">Street:</label>
  <input id="street" name="street" type="text">
  <label for="city">City:</label>
  <input id="city" name="city" type="text">
  <label for="state">State:</label>
  <input id="state" name="state" type="text">
  <p>Dimensions:</p>
  <label for="length">Length:</label>
  <input id="length" name="length" type="text">
  <label for="width">Width:</label>
  <input id="width" name="width" type="text">
  <label for="height">Height:</label>
  <input id="height" name="height" type="text">
  <label for="weight">How much does it weigh?</label>
  <input id="weight" name="weight" type="text">
  <button type="submit">Submit</button>
</form>