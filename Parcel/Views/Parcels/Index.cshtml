@using FubexParcel.Models;

<h1>Fudex Parcel Tracker</h1>

@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Parcel item in Model)
  {
    <li>Destination: <br>@item.Name <br>@item.Street<br>@item.City, @item.State</li>    
    <ul>
      <li>Cost: @item.Cost</li>
      <li>L: @item.Length</li>
      <li>W: @item.Width</li>
      <li>H: @item.Height</li>
      <li>Weight: @item.Weight</li>
      <li>Volume: @item.Volume</li>
    </ul>
  }
</ul>
<a href="/parcels/new">Add a new item.</a>